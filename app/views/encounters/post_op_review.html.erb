
<style type="text/css">
  #content, .inputPage{
    height: 545px !important;
  }

  #content{
    position: relative;
    margin-left: 2px;
    width: 99.7%;
    top: 383px;
  }
  .buttonsDiv{
    position: fixed;
    top: auto;
    bottom: -20px;
    margin-bottom: 2%;
    z-index: 1000;
  }

  #minute{
    display: none;
  }

  #hour{
    height: 200px !important;
  }

  #ptTimeSelectCntr{
    width: 38em;
  }

  #ptTimeSelectCntr{
    display: block !important;
    width: 60%;
    left: 20%;
  }

  #ptTimeSelectCntr .ptTimeSelectHrCntr a, #ptTimeSelectCntr .ptTimeSelectMinCntr a {
    display: block;
    float: left;
    margin: 1px;
    padding: 0.6em;
    text-align: center;
    text-decoration: none;
    width: 1.9em;
  }

  .ptTimeSelectHr ui-state-default{

  }

  .custom-inputs{
    z-index: 999;
    position: absolute;
    width: 20%;
    top: 20px;
    left: 35%;
  }

  .blank-td{
    width: 10%;
  }

  .hour-header, .minutes-header{
    text-align: center;
    font-weight: bold;
    left: 20px;
    padding-left: 25px;
  }

  .hourInput, .minutesInput{
    text-align: center;
  }

  #Unknown{
    display: none;
  }

  .helper {
    display: block;
    float:right;
    background-color: #DEDEDE;
  }
</style>

<form action="/encounters/create" method="POST" target="_top">
  <%= hidden_field_tag "encounter[encounter_type_name]", "POST-OP REVIEW" %>
  <%= hidden_field_tag "encounter[patient_id]", @patient.patient_id %>
  <%= hidden_field_tag "encounter[encounter_datetime]", DateTime.now() %>
  <%= hidden_field_tag "encounter[provider_id]", User.current.person_id%>

  <%= (touch_text_field_tag "REVIEW TIME", @patient, nil,
    {
      :field_type => "number",
      :allowFreeText => 'true',
      :tt_onLoad => "changeDecimalToColon();",
      :validationRule => "(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$",
      :validationMessage => "Bad time format (Use this format: 14<b>:30</b>)",
      :tt_pageStyleClass => "Numeric NumbersOnlyWithDecimal",
      :helpText => "Review Time <span class='helper'> Post-op review</span>"
    }).html_safe %>

  <%= (touch_text_field_tag "PULSE", @patient, nil,
    {
      :id => "pulse",
      :helptext => "Pulse Rate (Beats per Minute) <span class='helper'> Post-op review</span>",
      :field_type => 'number',
      :min => 50,
      :max => 120,
      :units => 'bpm',
      :validationRule => "([0-9]+)|Unknown$",
      :validationMessage => "You must enter a number between 0 and 9 (for example: 54)",
      :tt_pageStyleClass => "Numeric NumbersWithUnknownAndDecimal" }).html_safe %>

  <%= (touch_text_field_tag "SYSTOLIC BLOOD PRESSURE", @patient, nil,
    {
      :id => "systolic_blood_pressure",
      :helptext => "Systolic Blood Pressure <span class='helper'> Post-op review</span>",
      :field_type => "number",
      :tt_onUnLoad => "displayMessage('systolic_blood_pressure');",
      :tt_pageStyleClass => "NumbersWithUnknown",
      :min => 80,
      :max => 150 }).html_safe %>

  <%= (touch_text_field_tag "DIASTOLIC BLOOD PRESSURE", @patient, nil,
    {
      :id => "diastolic_blood_pressure",
      :helptext => "Diastolic Blood Pressure <span class='helper'> Post-op review</span>",
      :field_type => "number",
      :tt_onUnLoad => "displayMessage('diastolic_blood_pressure');",
      :tt_pageStyleClass => "NumbersWithUnknown",
      :min => 50,
      :max  => 100 }).html_safe %>

  <%= (touch_select_tag "PAIN", @patient, options_for_select(@pain_options),
    {
      :id => "type_of_pain",
      :helpText  => "Type of pain <span class='helper'> Post-op review</span>"
    }).html_safe %>

  <%= (touch_select_tag "BANDAGE", @patient, options_for_select(@bandage_options),
    {
      :id => "bandage",
      :helpText  => "Bandage (Bleeding) <span class='helper'> Post-op review</span>"
    }).html_safe %>

  <%= (touch_select_tag "OTHER ADVERSE EVENT ACTION", @patient, options_for_select(@other_ae_options),
    {
      :id => "other_ae",
      :helpText  => "Other Adverse Event? <span class='helper'> Post-op review</span>"
    }).html_safe %>

  <%= (touch_text_field_tag "SPECIFIC ADVERSE EVENT", @patient, nil,
    {
      :helpText => "Specify other Adverse Event <span class='helper'> Post-op review</span>",
      :field_type => 'alpha',
      :condition => "__$('other_ae').value != 'None'",
      :allowFreeText => true
    }).html_safe %> 

  <%= (touch_select_tag "MEDS GIVEN?", @patient, options_for_select(["", "Yes", "No"]),
    {
      :id => "meds-given?",
      :helpText  => "Medication given? <span class='helper'> Post-op review</span>"
    }).html_safe %>

  <%= (touch_text_field_tag "MEDICATION", @patient, nil,
    {
      :id => "medication",
      :condition => "__$('meds-given?').value.match(/YES/i)",
      :helpText => "Specify medication <span class='helper'> Post-op review</span>"
    }).html_safe %>


  <%= (touch_select_tag "READY FOR DISCHARGE?", @patient, options_for_select(["", "Yes", "No"]),
    {
      :id => "ready-for-discharge",
      :helpText  => "Ready for discharge <span class='helper'> Post-op review</span>"
    }).html_safe %>

  <%= (touch_text_field_tag "APPOINTMENT DATE", @patient, nil,
    {
      :id => "appointment-date",
      :absoluteMin => (Date.today),
      :maxDate => "#{@max_date}",
      :helptext => "Appointment date <span class='helper'> Post-op review</span>",
      :condition => "__$('ready-for-discharge').value.match(/YES/i)",
      :field_type => "date"
    }).html_safe %>

  <%= (touch_hidden_tag "REVIEW TIME", @patient, "", :id => "review_time").html_safe %>

</form>


<script type="text/javascript">
  function changeDecimalToColon(){
    decimal = jQuery("#decimal")[0];
    decimal.innerHTML = '<span>:</span>';
    decimal.setAttribute("onmousedown", "press(':')")
  }

  function displayMessage(options){

    setTimeout(function(){

        if (options == 'systolic_blood_pressure' && __$('systolic_blood_pressure').value >= 140 && __$('systolic_blood_pressure').value <= 150)
        {
          showMessage('Note: Client Systolic Blood Pressure is high',null,10000000000);
        }
        else if (options == 'diastolic_blood_pressure' && __$('diastolic_blood_pressure').value >= 50 && __$('diastolic_blood_pressure').value <= 90 )
        {
          showMessage('Note: Client Diastolic Blood Pressure is high',null,10000000000);
        }
       
    },100);  
}

</script>